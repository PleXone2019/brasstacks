<html>
<head><title>SiteCompare</title></head>

<body>
<link rel="stylesheet" type="text/css" href="/sitecompare/static/sitecompare.css" />   

<style type="text/css">
input {
  color:#222222;
  font-family:"Sabon LT Std","Hoefler Text","Palatino Linotype","Book Antiqua",serif;
  font-size:20px;
}

div.add-page-form {
  text-align:center;
}
table.latest-test-run {
  width:90%;
}
td.rms {
  width:20%;
  text-align:right;
}
td.uri {
  padding-left:5px;
  width:80%;
  text-align:left;
}

td a:link {
  font-size:12px;
  text-decoration: none;
  font-weight:bold;
}
td a:visited {
  font-size:12px;
  text-decoration: none;
  font-weight:bold;
}


</style>

<div class="site-title">Site Compare</div>

<form method="post" action="pages">
  <div class="add-page-form">
    <input type="text" name="uri"  style="width: 500px;"/><br>
    <input type="submit" value="add a page"/>
  </div>
</form>

<div class="latest-run"><a href="/sitecompare/runs/${latest['_id']}">Latest Run @ 
% if latest.has_key('endtime'):
  ${latest.endtime}
% endif
</a></div>
  
<table class="latest-test-run">
% for d, test in reversed(sorted([(t.result.get('difference'), t) for t in latest.tests])):
  <tr>
% if d > 1:
<%
  d = int(d)
%>
% endif
    <td class="rms">${str(d)}</td>
    <td class="uri">${test.uri} <a href="/sitecompare/tests/${test._id}">>>></a></td>
  </tr>
% endfor
</table>
</body>
</html>

